<header>
  <div class="site-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <% if (locals.loggedin && locals.accountData) { %>
      <span>Welcome <%= locals.accountData.account_firstname %></span>
      <a href="/account" title="Go to account management">Account</a>
      <a href="/account/logout" title="Click to logout">Logout</a>
    <% } else { %>
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header> 
