<%- include('../partials/header') %>
<%- include('../partials/navigation', {nav}) %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1><%= title %></h1>
      
      <% if (typeof(notice) !== 'undefined' && notice) { %>
        <div class="alert alert-info" role="alert">
          <%= notice %>
        </div>
      <% } %>
      
      <% if (typeof(errors) !== 'undefined' && errors) { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.array().forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      
      <form action="/account/register" method="post">
        <div class="form-group">
          <label for="account_firstname">First Name:</label>
          <input type="text" class="form-control" id="account_firstname" name="account_firstname" value="<%= typeof(account_firstname) !== 'undefined' ? account_firstname : '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="account_lastname">Last Name:</label>
          <input type="text" class="form-control" id="account_lastname" name="account_lastname" value="<%= typeof(account_lastname) !== 'undefined' ? account_lastname : '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="account_email">Email:</label>
          <input type="email" class="form-control" id="account_email" name="account_email" value="<%= typeof(account_email) !== 'undefined' ? account_email : '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="account_password">Password:</label>
          <input type="password" class="form-control" id="account_password" name="account_password" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
      
      <p class="mt-3"><a href="/account/login">Already have an account? Login here</a></p>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 